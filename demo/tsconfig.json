{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "taro-virtual-swiper": ["../src/index.ts"]
    },
    "baseUrl": "."
  },
  "include": ["./src", "./config", "../types"],
  "compileOnSave": false
}
